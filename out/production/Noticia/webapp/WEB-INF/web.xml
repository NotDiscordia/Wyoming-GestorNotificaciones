<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Wyoming-GestorNotificaciones</display-name>

    <!-- ConfiguraciÃ³n del servlet -->
    <servlet>
        <servlet-name>NoticiaServlet</servlet-name>
        <servlet-class>NoticiaServlet</servlet-class>
    </servlet>

    <!-- Mapeo del servlet -->
    <servlet-mapping>
        <servlet-name>NoticiaServlet</servlet-name>
        <url-pattern>/NoticiaServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
